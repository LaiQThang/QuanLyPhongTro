@{
    string cookieValue = ViewBag.CookieValue;
    ViewData["AccountUser"] = cookieValue;
    int CountBooked = ViewBag.CountBooked;
    ViewData["CountBooked"] = CountBooked;
    int CountCustomer = ViewBag.CountCustomer;
    ViewData["CountCustomer"] = CountCustomer;
    int CountPartner = ViewBag.CountPartner;
    ViewData["CountPartner"] = CountPartner;
    int CountAccess = ViewBag.CountAccess;
    ViewData["CountAccess"] = CountAccess;
}
@section StyleCss {
    <link rel="stylesheet" href="~/css/dangbai.css" />
}

<div class="container-fluid d-flex justify-content-center align-items-center">
    <div class="container mw-1200">
        <div class="row">

            @Html.Partial("Sidebar")

            <div class="col-lg-9 col-md-12">
                <div class="container-fluid d-flex flex-column justify-content-center mw-1200">
                    <form class="wrap-content">
                        <div class="box-info">
                            <div class="box-content">
                                <h5>Điền đầy đủ thông tin dưới đây</h5>
                                <table class="table mt-30" width="100%">
                                    <tbody>
                                        <tr>
                                            <td colspan="1"><b>Địa chỉ</b></td>
                                            <td colspan="4">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" id="floatingInput" placeholder="Nhập địa chỉ">
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="1"><b>Giá</b></td>
                                            <td colspan="4">
                                                <div class="form-floating mb-3">
                                                    <input type="number" class="form-control" id="floatingInput" placeholder="Nhập giá">
                                                </div>
                                            </td>
                                        </tr>

                                        <tr>

                                            <td colspan="1"><b>Diện tích</b></td>
                                            <td>
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" id="floatingInput" placeholder="Diện tích (m^2)">
                                                </div>
                                            </td>
                                            <td colspan="1"><b>Người đăng</b></td>
                                            <td>
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" id="floatingInput" placeholder="Tên người đăng">
                                                </div>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td colspan="1"><b>Tình trạng</b></td>
                                            <td>
                                                <div class="form-floating">
                                                    <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                                                        <option selected>Tình trạng</option>
                                                        <option value="1">Còn phòng</option>
                                                        <option value="2">Hết phòng</option>
                                                    </select>
                                                </div>
                                            </td>
                                            <td colspan="1"><b>Điện thoại</b></td>
                                            <td>
                                                <div class="form-floating mb-3">
                                                    <input type="number" class="form-control" id="floatingInput" placeholder="Số điện thoại">
                                                </div>
                                            </td>
                                        </tr>
                                        </tr>

                                        <tr>
                                            <td colspan="1"><b>Vùng miền</b></td>
                                            <td>
                                                <div class="form-floating">
                                                    <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                                                        <option selected>Vùng miền</option>
                                                        <option value="1">Miền Bắc</option>
                                                        <option value="2">Miền Trung</option>
                                                        <option value="3">Miền Nam</option>
                                                    </select>
                                                </div>
                                            </td>
                                            <td colspan="1"><b>Ngày cập nhật</b>
                                            <td>
                                                <div class="form-floating mb-3">
                                                    <input type="date" class="form-control" id="floatingInput">
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="1"><b>Ngày bắt đầu thuê</b></td>
                                            <td>
                                                <div class="form-floating mb-3">
                                                    <input type="date" class="form-control" id="floatingInput">
                                                </div>
                                            </td>
                                            <td colspan="1"><b>Ngày hết hạn</b>
                                            <td>
                                                <div class="form-floating mb-3">
                                                    <input type="date" class="form-control" id="floatingInput">
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="wrap-content--detail mt-30">
                            <h5 class="title-detail">THÔNG TIN CHI TIẾT</h5>
                            <div class="box-content">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                                    <label for="floatingTextarea2"></label>
                                </div>
                            </div>
                        </div>

                        <div class="wrap-content--detail mt-30">
                            <h5 class="title-detail">Tiêu đề</h5>
                            <div class="box-content">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                                    <label for="floatingTextarea"></label>
                                </div>
                            </div>
                        </div>

                        <div class="btn-wrap mt-30 d-flex justify-content-center">
                            <button class="btn btn-warning">Quay lại</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

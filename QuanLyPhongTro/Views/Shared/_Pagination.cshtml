@model QuanLyPhongTro.Models.Pagination.Pager

<div class="row mw-100 w-100">
    @if (Model.TotalPage > 0)
    {
        <ul class="pagination justify-content-center mt-5">

            @if (Model.CurentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="@ViewData["Action"]" asp-controller="@ViewData["Controller"]" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="@ViewData["Action"]" asp-controller="@ViewData["Controller"]" asp-route-pg="@(Model.CurentPage - 1)">Previous</a>
                </li>
            }

            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurentPage ? "active" : "")">
                    <a class="page-link" asp-action="@ViewData["Action"]" asp-controller="@ViewData["Controller"]" asp-route-pg="@pge">@pge</a>
                </li>
            }

            @if (Model.CurentPage < Model.TotalPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="@ViewData["Action"]" asp-controller="@ViewData["Controller"]" asp-route-pg="@(Model.CurentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="@ViewData["Action"]" asp-controller="@ViewData["Controller"]" asp-route-pg="@Model.TotalPage">Last</a>
                </li>
            }
        </ul>
    }
</div>

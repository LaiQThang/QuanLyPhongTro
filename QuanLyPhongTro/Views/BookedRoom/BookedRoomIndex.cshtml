@{
    string cookieValue = ViewBag.CookieValue;
    ViewData["AccountUser"] = cookieValue;
}
@section StyleCss {
    <link rel="stylesheet" href="~/css/quanlybaidang.css" />
}

<div class="container-fluid d-flex justify-content-center align-items-center">
    <div class="container mw-1200">
        <div class="row">

            @Html.Partial("Sidebar")

            <div class="col-lg-9 col-md-12">
                <div class="list-destination d-flex flex-column w-100">
                    <p class="title-search">Số bài đã đăng: 3 </p>
                    <div class="input-group arrangeBox">
                        <div class="wrap_arrange d-flex w-100">
                            <span class="input-group-text">
                                <span class="fa-solid fa-arrow-right-arrow-left"></span>
                            </span>
                            <select class="form-select choose-condition" style="margin-left:10px;" id="validationCustom04" required>
                                <option selected disabled value="">Sắp xếp theo ngày đăng mới nhất</option>
                                <option selected disabled value="">Sắp xếp theo lượt xem cao nhất</option>
                                <option selected disabled value="">Sắp xếp theo bài đăng có user xem gần nhất</option>
                            </select>
                        </div>
                    </div>


                    <div class="posts-item d-flex flex-row align-items-center mt-30">
                        <img src="./assets/img/phong.jpg" alt="" class="posts-img">
                        <div class="posts--info">
                            <p class="posts--province mt-15">Hồ Chí Minh</p>
                            <h5 class="posts--title"><a href="">Cho thuê phòng mới thiết kế như homestay</a></h5>
                            <p class="posts--price">Giá: 1.500.000 VNĐ</p>
                            <p class="posts--address">Thống Nhất, 15, Gò Vấp, Bình Chánh</p>
                        </div>
                        <div class="btn-wrap mt-30 d-flex flex-column">
                            <button class="btn btn-primary mb-10">Sửa bài</button>
                            <button class="btn btn-warning">Xóa</button>
                        </div>
                    </div>

                    <div class="posts-item d-flex flex-row align-items-center mt-30">
                        <img src="./assets/img/phong.jpg" alt="" class="posts-img">
                        <div class="posts--info">
                            <p class="posts--province mt-15">Hồ Chí Minh</p>
                            <h5 class="posts--title"><a href="">Cho thuê phòng mới thiết kế như homestay</a></h5>
                            <p class="posts--price">Giá: 1.500.000 VNĐ</p>
                            <p class="posts--address">Thống Nhất, 15, Gò Vấp, Bình Chánh</p>
                        </div>
                        <div class="btn-wrap mt-30 d-flex flex-column">
                            <a class="btn btn-primary mb-10" asp-action="BookedRoomInformation" asp-controller="BookedRoom">Thông tin</a>
                            <button class="btn btn-warning">Xoá</button>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

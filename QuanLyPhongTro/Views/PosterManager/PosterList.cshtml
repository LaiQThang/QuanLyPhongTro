@model QuanLyPhongTro.Models.ViewModels.Admin.PosterManagerModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Tittle"] = "Poster list";
    string accountUser = ViewBag.CookieValue;
    ViewData["AccountUser"] = accountUser;
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">ROOM LIST</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <a href="#" class="btn btn-primary mr-3" style="color: #FFF;"><i class="fa-solid fa-plus"></i></a>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="DashBoard">Home</a></li>
                    <li class="breadcrumb-item active">Permission</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="container-fluid" style="border: 1px solid #ccc;">
        <div class="row d-flex align-items-center p-2">
            <i class="fa-solid fa-list m-2"></i>
            <h4 class="mb-0 ml-2">LIST</h4>
        </div>
        @*  @if (session('msg'))
        <div class="alert alert-success">{{session('msg')}}</div>
        @endif *@
        <table class="table table-bordered">
            <thead class="row" style="display: table-row-group">
                <tr>
                    <th class="col-1" scope="col">ID</th>
                    <th class="col-2" scope="col">Tittle</th>
                    <th class="col-2" scope="col">Content</th>
                    <th class="col-2" scope="col">Create-time</th>
                    <th class="col-2" scope="col">ID Room</th>
                    <th class="col-1" scope="col">ID User Create</th>
                    <th class="col-1" scope="col">Hided</th>
                    <th class="col-1" scope="col">Lựa chọn</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.baiDangs != null)
                {

                    @foreach (var item in Model.baiDangs)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.TieuDe</td>
                            <td>@item.NoiDung</td>
                            <td>@item.NgayTao</td>
                            <td>@item.PhongTroId</td>
                            <td>@item.ApplicationUserId</td>
                            <td>@item.flag</td>
                            <td>
                                <a href="#" class="btn btn-primary mt-2">Edit</a>
                                <a href="#" class="btn btn-danger mt-2 delete_user">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>
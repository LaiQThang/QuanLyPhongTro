@model QuanLyPhongTro.Models.Domain.ApplicationUser;
@{
	Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<title>Login 07</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/css/login.css">

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">

					<div class="wrap d-md-flex">
						<div class="text-wrap p-4 p-lg-5 text-center d-flex flex-column align-items-center justify-content-center order-md-last">
							<div class="img-logo--wrap">
								<img src="~/img/logo (1).png" alt="" class="img-logo">
							</div>
							<div class="text w-100 mt-50">
								<h2>Welcome to login</h2>
								<p>Don't have an account?</p>
								<a href="/Authencation/Register" class="btn btn-white btn-outline-white">Sign Up</a>
							</div>
						</div>
						<div class="login-wrap p-4 p-lg-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Sign In</h3>
								</div>
								<div class="w-100">
									<p class="social-media d-flex justify-content-end">
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
									</p>
								</div>
							</div>
							@if (ViewData["ValidateMessage"] != null)
							{
								<div class="alert alert-danger" role="alert">
									@ViewData["ValidateMessage"]
								</div>
							}
							@if (ViewData["ValidateMessageSucess"] != null)
							{
								<div class="alert alert-danger" role="alert">
									@ViewData["ValidateMessageSucess"]
								</div>
							}
							<form asp-controller="Authencation" asp-action="Login" class="signin-form" method="post">
								<div class="form-group mb-3">
									<label class="label" for="name">Username</label>
									<input type="text" class="form-control" placeholder="Username" required asp-for="UserName">
								</div>
								<div class="form-group mb-3">
									<label class="label" for="password">Password</label>
									<input type="password" class="form-control" placeholder="Password" required asp-for="PasswordHash">
								</div>
								<div class="form-group">
									<button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
								</div>
								<div class="form-group d-md-flex">
									<div class="w-50 text-left">
										<label class="checkbox-wrap checkbox-primary mb-0">
											Remember Me
											<input class="form-check-input" asp-for="KeepLogin">
											@* @Html.DisplayNameFor(m => m.KeepLogin) *@
											<span class="checkmark"></span>
										</label>
									</div>
									<div class="w-50 text-md-right">
										<a href="#">Forgot Password</a>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>



<div class="col-lg-3 col-md-12">
    <div class="body__searchbox">
        <form action="" class="d-flex flex-column w-100">
            <h4>Tìm kiếm</h4>

            <p>Tên chỗ nghỉ/điểm đến</p>
            <div class="input-group">
                <span class="input-group-text">
                    <span class="fa-solid fa-magnifying-glass"></span>
                </span>
                <input type="text" class="form-control" placeholder="Nhập điểm đến">
            </div>

            <p>Ngày nhận phòng</p>
            <div class="input-group">
                <span class="input-group-text">
                    <span class="fa-regular fa-calendar"></span>
                </span>
                <input type="date" class="form-control" name="check-in--date" id="checkInDate">
            </div>

            <p>Ngày trả phòng</p>
            <div class="input-group">
                <span class="input-group-text">
                    <span class="fa-regular fa-calendar"></span>
                </span>
                <input type="date" class="form-control" name="check-out--date" id="checkOutDate">
            </div>
            <button class="btn btn-primary">Tìm</button>

        </form>
    </div>

    <!-- Tìm kiếm theo điều kiện khác -->
    <div class="mt-30 search__conditions">
        <h5>Tìm kiếm theo giá phòng</h5>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Từ 1.000.000 - 5.000.000
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
            <label class="form-check-label" for="flexCheckChecked">
                Từ 5.000.000 - 10.000.000
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
            <label class="form-check-label" for="flexCheckChecked">
                Trên 10.000.000
            </label>
        </div>
    </div>
</div>